<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:srcCompat="@drawable/intro_logo" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="97dp"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:text="Welcome to Mad Libs! I will ask you to fill in words to complete the story until you are done filling in all the missing words. That's part of the fun. Click below to get started..."
        android:textColor="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnst"
        android:layout_width="wrap_content"
        android:layout_height="73dp"
        android:layout_gravity="right"
        android:onClick="start"
        android:text="GET STARTED!"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold"
        app:backgroundTint="?attr/colorSecondaryVariant" />
</LinearLayout>